{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "lib": ["ES2022"],
    "sourceMap": true,
    
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "../../schemas/**/*", "../src/styles/**/*"],
  "exclude": ["node_modules"]
}